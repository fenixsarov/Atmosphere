prepend page
  - var title = "Основы студийной фотосъёмки"
block content
  input#page_name(type="hidden", value="#{page}")
  section.page_mainheader
    .container
      .row
        .col-xs-12.col-md-7
          img#image(src="{% static '/images/school/studio_photo/main_header.jpg' %}")
