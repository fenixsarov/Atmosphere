mixin photogallery_item(_url)
  .col-md-3
    .img-container
      //.img(style="background-image: url('#{imageUrl}/#{_url}')")
      .img(style="background-image: url('#{_url}')")

mixin teacher_card(img_url, name, description, social_link, social_name)
  .box.atm-teachers-card
    .row
      .col-xs-12.col-md-4.atm-teachers-card__photo
        img(src="#{img_url}", title="Фотография преподавателя")
      .col-xs-12.col-md-8.atm-teachers-card__description
        h1.atm-teacher-name #{name}
        p.atm-teacher-text.font-light #{description}
        a.atm-teacher-social-link.font-light(href="#{social_link}")
          i.fab.fa-vk
          span.font-light Ссылка на профиль
        //-  span.font-light Ссылка на instagram #{social_name}

mixin feedback(user_img, user_name, user_feedback, vk_link)
  .feedback__single
    .img-container(style="background-image: url('#{user_img}')")
    .atm-feedback__text
      a.atm-feedback__name(href="#{vk_link}", target="_blank") #{user_name}
      p #{user_feedback}