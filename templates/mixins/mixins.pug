mixin plate(img_src, header, description, _align)
  //- - var align = _align ? _align : "plate_left-align"; url('#{imageUrl}/#{img_src}')
  .box.plate(class="#{_align}")
    .row
      .col-md-6.col-xs-12.plate__img-container
        .plate__img-preview(style="background-image: url('#{img_src}')")
      .col-md-6.col-xs-12.plate__description-container
        .plate__description
          h2.header #{header}
          p.description #{description}
          .plate__more-btn-container
            a.plate__more-btn
              i.fa.fa-plus-circle

mixin plate_new(img_src, header, description)
  .plate_new
    .plate_new__img-preview(style="background-image: url('#{img_src}')")
    .plate_new__description
      .plate_new__description_header #{header}
      .plate_new__description_text #{description}

mixin blog_item(href, img_src, header, description, date)
  article
    a.blog-item(href="#{href}")
      .blog-item__bg
        img(src="#{img_src}", alt="Blog #{header} img")
      .blog-item__description
        header
          .blog-item__date.font-light #{date}
          .blog-item__header.font-medium #{header}
          .blog-item__text.font-light #{description}

mixin event(url, header, description, bg_img)
  .event
    a.content(href=url)
      .image(style="background-image: url('#{bg_img}');")
      .description
        div.name #{header}
        div.desc #{description}
mixin event_disabled(url, header, description, bg_img)
  .event-disabled
    .content
      .image(style="background-image: url('#{bg_img}');")
      .description
        div.name #{header}
        div.desc #{description}
