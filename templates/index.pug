extends base
| {% load staticfiles %}
include mixins/mixins.pug

prepend page
  - var title = "Главная страница"
  - var header_absolute = "atm-navigation-absolute";

block content

  section.atm-header-section.page_mainheader
    .container
      .row#atm-header-slogan-section
        .parallax-content.parallax-img
        .box.box-container
          .col-xs.end-xs.atm-slogan
            .slogan
              span САМАЯ<br>АТМОСФЕРНАЯ<br>ФОТОСТУДИЯ<br>ГОРОДА!
  section#scenery
    .container
      .row
        .col-xs
          .box.box-conainer#scenery-carousel
            .row
              ul.col-xs.content
                li.item.active
                  a(href="/school/photo")
                li.item
                  a(href="/masterclass")
                li.item
                  a(href="/school/study_photography")
              //- .carousel-indicators
              //-   .col-xs-12  
              //-     a.col-xs.carousel-control.left(role="button", data-slide="prev")
              //-       span.fi.flaticon-left-chevron(aria-hidden=true)
              //-     a.col-xs.carousel-control.right(role="button", data-slide="next")
              //-       span.fi.flaticon-right-chevron(aria-hidden=true)
            //- .row.center-xs.middle-xs.carousel-indicators
            //-   .col-md-3
            //-     .box
            //-       .row
            //-         a.col-xs.carousel-control.left(role="button", data-slide="prev")
            //-           span.fi.flaticon-left-chevron(aria-hidden=true)
            //-         //- ol.col-xs
            //-         //-   li.active(data-slide-to="0")
            //-         //-   li(data-slide-to="1")
            //-         //-   li(data-slide-to="2")
            //-         a.col-xs.carousel-control.right(role="button", data-slide="next")
            //-           span.fi.flaticon-right-chevron(aria-hidden=true)
  section#lifephoto
    .container
      .row.top-md
        .col-md-7.col-xs-12
          .livephoto-img
        .col-md-4.col-md-offset-1.col-xs-12.description
          .description__title
            h1.title НАША ТРАДИЦИЯ
          .description__text
            p.desc У нас в студии есть традиция - пить чай. 
              | Именно так мы коротаем время между сьемками. 
              | Приходте к нам и мы встретим вас чаем и печеньками. 
              | Потому что мы любим гостей и всегда ждем вас в нашей теплой уютной студии
  | {% static '/images' as imageUrl %}
  section#events
    .container
      .row.event-container
        - var evt_img = ['school.png', 'blog.png', 'masterclass.png'];
        | {% with imageUrl|add:'/events/' as src  %}
        - var srcImg = src + evt_img[0]
        .col-md.col-sm.col-xs-12
          +event("/school", "фотошкола", "Обучаем теории и практике фотографии", srcImg)
        - var srcImg1 = src + evt_img[1]
        .col-md.col-sm.col-xs-12
          +event("/blog", "блог", "Пишем про новую движуху нашей студии", srcImg1)
        - var srcImg2 = src + evt_img[2]
        .col-md.col-sm.col-xs-12
          +event("/masterclass", "мастер-классы", "Проводим атмосферные мастер-классы", srcImg2)
        | {% endwith %}
  section#our-team
    .container
      .row
        .col-md.team
          .row
            .col-xs-12.col-sm-7.photo
              img(src="{% static 'images/team.png' %}")
            .col-xs-12.col-sm-4.col-sm-offset-1.description
              .description__title
                h1.title НАША КОМАНДА
              .description__text
                p.desc Да, а на фото часть нашей дружной команды. 
                  | Именно мы радуем Вас дружеской обстановкой и хорошим настроением! 
                  | Это мы Вас встречаем радушно чаем и печеньками. 
                  | Мы любим Вас и всегда ждём в нашей тёплой, уютной студии!
  section#map
    .container
      .row
        .col-md.map
          .row
            .col-xs-12.col-sm-4.description
              .description__title
                h1.title Как проехать
              .description__text
                p.desc Мы находимся в здании "Дома торговли". 
                  | Вход справа от "Пятёрочки".
                  | Поднимайтесь на третий этаж, мы Ваc ждём!
            .col-xs-12.col-sm-7.col-sm-offset-1.photo
              img(src="{% static 'images/bg/map.png' %}")